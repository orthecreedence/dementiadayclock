<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/displayView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.salisburys.dayclock.MainDisplayFrqagment" >

    <TextView
        android:id="@+id/prologue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/dateDOW"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/prologue"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/datePER"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dateDOW"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:id="@+id/dateTIM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datePER"
        android:gravity="center_vertical|center_horizontal" />

</RelativeLayout><!-- From: file:/Disks/Data/Peter/9-Personal/home/Android/AndroidStudioProjects/dementiadayclock/app/src/main/res/layout/fragment_main.xml -->